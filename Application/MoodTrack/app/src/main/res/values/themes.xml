<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoodTrack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orangeAccent</item>
        <item name="colorOnPrimary">@color/orangeOnText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/burgundy</item>
        <item name="colorSecondaryVariant">@color/burgundyAccent</item>
        <item name="colorOnSecondary">@color/burgundyOnText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>

